%h2 Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :freeagent_subdomain, :hint => 'xxxx.freeagentcentral.com', :input_html => {size: 15}
  = f.input :freeagent_username
  = f.input :freeagent_password
  = f.submit "Update"
= render :partial => "devise/shared/links"

%h3 Cancel my account

%p
  Unhappy? 
  = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>

= link_to "Back", :back
